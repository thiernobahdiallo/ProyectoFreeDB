<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Asignaturas">
    <Button
        android:id="@+id/añadirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Añadir Asignatura" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/añadirButton"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Seleccionar Asignatura" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/selectButton"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Listar asignaturas" />

    <Button
        android:id="@+id/modificarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/listButton"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Modificar asignatura" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/modificarButton"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Borrar asignatura" />
</RelativeLayout>