<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F870AB"
    tools:context=".alumnos.ModificarAlumno">

    <TextView
        android:id="@+id/tvIDCalificarAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="ID:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCalificarIdAlumno"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:background="@drawable/coloresbotonesasignaturas"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/tvCalificarIDAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIDCalificarAlumno"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:fontFamily="monospace"
        android:text="Nombre:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCalificarIDAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/coloresbotonesasignaturas"
        android:layout_below="@id/editCalificarIdAlumno"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/tvHorasAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCalificarIDAsignatura"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:fontFamily="monospace"
        android:text="Horas:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/coloresbotonesasignaturas"
        android:layout_below="@id/editCalificarIDAsignatura"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/calificarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNota"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/coloresbotonesasignaturas"
        android:text="Refresh"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>