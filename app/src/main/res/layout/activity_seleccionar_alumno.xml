<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D94FF"
    tools:context=".alumnos.SeleccionarAlumno">

    <EditText
        android:id="@+id/editAsignaturaID"
        android:layout_toRightOf="@id/tvIdAlumno"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/colorbotonesalumnos"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/selectAsignaturaButtoncito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/editAsignaturaID"
        android:background="@drawable/colorbotonesalumnos"
        android:text="Select"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/backAsignaturaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectAsignaturaButtoncito"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/colorbotonesalumnos"
        android:text="Back"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvSelectNombreAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectAsignaturaButtoncito"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="115dp"
        android:fontFamily="monospace"
        android:text="Nombre Alumno:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSelectHorasAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectNombreAsignatura"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Edad:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmailAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectHorasAsignatura"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Email: "
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCursoAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmailAlumno"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Curso:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNombreAlumnho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectAsignaturaButtoncito"
        android:layout_toRightOf="@id/tvSelectNombreAsignatura"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginTop="115dp"
        android:fontFamily="monospace"
        android:text="" />

    <TextView
        android:id="@+id/tvEdadAlumnho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectNombreAsignatura"
        android:layout_toRightOf="@id/tvSelectHorasAsignatura"
        android:layout_marginLeft="126dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="" />

    <TextView
        android:id="@+id/tvEmailAlumnho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectHorasAsignatura"
        android:layout_toRightOf="@id/tvEmailAlumno"
        android:layout_marginLeft="109dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="" />

    <TextView
        android:id="@+id/tvCursoAlumnho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvCursoAlumno"
        android:layout_below="@id/tvEmailAlumno"
        android:layout_marginLeft="118dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="" />

    <TextView
        android:id="@+id/tvIdAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="ID:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>