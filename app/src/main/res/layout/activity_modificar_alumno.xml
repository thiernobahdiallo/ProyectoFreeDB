<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D94FF"
    tools:context=".alumnos.ModificarAlumno">


    <TextView
        android:id="@+id/tvRefreshID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="51dp"
        android:fontFamily="monospace"
        android:text="ID"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCalificarIdAlumno"
        android:layout_marginTop="50dp"
        android:background="@drawable/colorbotonesalumnos"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="" />


    <TextView
        android:id="@+id/tvRefreshNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRefreshID"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="49dp"
        android:fontFamily="monospace"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCalificarIDAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCalificarIdAlumno"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/colorbotonesalumnos"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="" />


    <TextView
        android:id="@+id/tvRefreshEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRefreshNombre"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="52dp"
        android:fontFamily="monospace"
        android:text="Edad"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCalificarIDAsignatura"
        android:background="@drawable/colorbotonesalumnos"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:text="" />


    <TextView
        android:id="@+id/tvRefreshEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRefreshEdad"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="53dp"
        android:fontFamily="monospace"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editRefreshEmailAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/editNota"
        android:background="@drawable/colorbotonesalumnos"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />


    <TextView
        android:id="@+id/tvRefreshCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRefreshEmail"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace"
        android:text="Curso"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editRefreshCursoAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/colorbotonesalumnos"
        android:layout_below="@id/editRefreshEmailAlumno"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/refreshButtoncito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editRefreshCursoAlumno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/colorbotonesalumnos"
        android:text="Refresh"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>